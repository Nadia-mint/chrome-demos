<!DOCTYPE html>
<html><head><meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title>getUserMedia Demo 2160p (4K)</title>
<style>
video {
    border:5px solid black;
}
button {
    font: 18px sans-serif;
    padding: 8px;
}
</style>
</head>
<body>
<button id="btn" onclick="start()" font-size: 50px>2160p (4K) capture</button>
<br/>
<video id="vid" autoplay="true" width="3860" height="2160"></video>
<br/>
<div>
    Open a camera in 2160p (4K) and render on a video tag of the same size.
</div>

<script>
video= document.getElementById("vid");
var constraints ={
  "audio": false, "video": { "mandatory": {
    "minWidth": "3860", "maxWidth": "3860", "minHeight": "2160", "maxHeight": "2160",
   },
   "optional": []
  }
}

function start() {
  navigator.webkitGetUserMedia(constraints, gotStream,  getUserMediaError); 
  btn.disabled = true;
}

function gotStream(stream) {
  video.src = webkitURL.createObjectURL(stream);
}

function getUserMediaError(e) {
  alert('Error during webkitGetUserMedia: '+ e);
}

</script>



</body></html>
